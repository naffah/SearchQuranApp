<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.naffah.searchquranapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="false"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".Controllers.Activities.WordSearch.RootSearchResultActivity"></activity>
        <activity android:name=".Controllers.Activities.WordSearch.EnglishSearchResultActivity" />
        <activity android:name=".Controllers.Activities.WordSearch.SearchByEnglishWordActivity" />
        <activity android:name=".Controllers.Activities.SearchMainActivity" />
        <activity android:name=".Controllers.Activities.VersesList.VersesListActivity" />
        <activity android:name=".Controllers.Activities.SuraList.SuraListScrollable" />
        <activity android:name=".Controllers.Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controllers.Activities.IndexSearch.IndexSearchResultActivity" />
        <activity android:name=".Controllers.Activities.IndexSearch.SearchByIndexActivity" />
        <activity android:name=".Controllers.Activities.WordSearch.SearchByArabicWordActivity" />
        <activity android:name=".Controllers.Activities.WordSearch.ArabicSearchResultActivity" />
        <activity android:name=".Controllers.Activities.SpeechToText.SpeechToTextActivity" />
        <activity android:name=".Controllers.Activities.WordSearch.SearchByRootWordActivity" />
        <activity android:name=".Controllers.Activities.Bookmarks.BookmarksListActivity" />
    </application>

</manifest>
